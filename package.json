{
  "name": "vscode-antv",
  "displayName": "AntV for VSCode",
  "description": "Enjoy your chart development with AntV!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscode-antv.start"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-antv.start",
        "title": "Start AntV for VSCode"
      }
    ],
    "languages": [
      {
        "id": "js",
        "extensions": [
          ".js"
        ]
      },
      {
        "id": "ts",
        "extensions": [
          ".ts"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-antv.start",
          "when": "resourceLangId == js"
        },
        {
          "command": "vscode-antv.start",
          "when": "resourceLangId == ts"
        }
      ],
      "editor/title/context": [
        {
          "command": "vscode-antv.start",
          "when": "resourceLangId == js"
        },
        {
          "command": "vscode-antv.start",
          "when": "resourceLangId == ts"
        }
      ],
      "editor/context": [
        {
          "command": "vscode-antv.start",
          "when": "resourceLangId == js"
        },
        {
          "command": "vscode-antv.start",
          "when": "resourceLangId == ts"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/generator": "^7.18.12",
    "@babel/parser": "^7.18.11",
    "@babel/traverse": "^7.18.11",
    "@babel/types": "^7.18.10"
  }
}
